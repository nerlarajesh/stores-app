<div class="modal fade in" id="store-locator-modal" tabindex="-1" role="dialog" aria-hidden="false"
     style="padding-right: 15px;">
    <div class="modal-backdrop  fade in" style="height: 1002px;"></div>
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header trench clean trench-medium">
                <div class="find-a-store-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i aria-hidden="true"
                                                                                                   class="icon-close"></i>
                    </button>
                    <div class="v-spacing-medium">
                        <h4 class="modal-title">Find a Store</h4>
                    </div>
                    <form id="store-locator-form" class="js-store-locator-form">
                        <input type="hidden" name="latitude" value="35.2054902">
                        <input type="hidden" name="longitude" value="-80.86117008">
                        <div class="form-group">
                            <div class="input-group">
                                <input id="search-box" type="text" name="searchTerm" class="form-control"
                                       aria-describedby="ada-storelocator-describedby"
                                       aria-labelledby="ada-storelocator-describedby"
                                       placeholder="ZIP Code or City, State" autocompletetype="storelocator"
                                       autofocus="">
                                <span class="input-group-btn">
                                    <button class="btn btn-default btn-primary" data-linkid="find-a-store-mechanism"
                                            type="submit">Find</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="js-SL-modal-body">
                <div class="modal-body find-a-store-modal-body">
                    <div class="js-SL-list find-a-store-list">
                        <ul>
                            <li class="">
                                <div class="media v-spacing-small">
                                    <div class="media-body">
                                        <address>
                                            <a href="/store/NC-Mooresville/595" title="Mooresville Lowe's"
                                               data-linkid="store-595" class="v-spacing-mini display-block">Mooresville Lowe's</a>
                                            <span>509 River Highway</span><br>
                                            <span>Mooresville, NC</span>
                                        </address>
                                    </div>
                                    <div class="media-right media-middle">
                                        <button data-linkid="shop-this-store" data-store-number="595"
                                                class="store-locator-select btn btn-primary btn-small">Shop
                                            This Store
                                        </button>
                                    </div>
                                </div>
                                <hr class="v-spacing-small background-grey">
                            </li>
                            <li class="">
                                <div class="media v-spacing-small">
                                    <div class="media-body">
                                        <address>
                                            <a href="/store/IL-Arlington-Heights/2529" title="Arlington Heights Lowe's"
                                               data-linkid="store-2529" class="v-spacing-mini display-block">Arlington Heights Lowe's</a>
                                            <span>990 West Algonquin Rd</span><br>
                                            <span>Arlington Heights, IL</span>
                                        </address>
                                    </div>
                                    <div class="media-right media-middle">
                                        <button data-linkid="shop-this-store" data-store-number="2529"
                                                class="store-locator-select btn btn-primary btn-small">Shop
                                            This Store
                                        </button>
                                    </div>
                                </div>
                                <hr class="v-spacing-small background-grey">
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer trench clean trench-medium js-sL-modal-footer-hide">
                    <div class="align-center">
                        <form class="js-store-locator-view-more-stores" action="#">
                            <button class="btn btn-secondary" type="submit">View More</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

